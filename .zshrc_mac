#
# Additional mac specific config
#

### Colorful ls ###
export CLICOLOR=1
export LSCOLORS=gxfxbxdxCxegedabagacad

### Better prompt ###
PROMPT="%{$fg[green]%}[%n@`ipconfig getifaddr en0`] %2~ $%{$reset_color%} "
RPROMPT="%(?..[%{$fg_bold[red]%}%?%{$reset_color%}])"

### Useful Aliases ###
alias c='highlight -O ansi'
alias time='time -p'
alias brewup='brew update && brew upgrade'

### Additional bin for homebrew
export PATH="/usr/local/sbin:$PATH"
